@model IEnumerable<LAPTOP.Models.HoaDon>

@{
    ViewData["Title"] = "Quản lý Đơn Hàng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary"><i class="bi bi-receipt"></i> @ViewData["Title"] (@Model.Count() đơn hàng)</h2>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow">
        <i class="bi bi-plus-circle"></i> Tạo đơn thủ công
    </a>
</div>
<div class="mb-3">
    <a asp-action="ThongKe" class="btn btn-warning shadow-sm">
        <i class="bi bi-pie-chart-fill"></i> Xem Thống Kê Doanh Thu
    </a>
</div>

<div class="card mb-3 shadow-sm border-0">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="fw-bold">Lọc theo trạng thái:</label>
            </div>
            <div class="col-auto">
                <select name="trangThai" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Tất cả trạng thái --</option>
                    <option value="0" selected="@(ViewBag.CurrentStatus == 0)">Đơn mới (Chờ xử lý)</option>
                    <option value="1" selected="@(ViewBag.CurrentStatus == 1)">Đang xử lý</option>
                    <option value="2" selected="@(ViewBag.CurrentStatus == 2)">Đang giao hàng</option>
                    <option value="3" selected="@(ViewBag.CurrentStatus == 3)">Đã giao thành công</option>
                    <option value="4" selected="@(ViewBag.CurrentStatus == 4)">Đã hủy</option>
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã HĐ</th>
                    <th>Ngày Lập</th>
                    <th>Khách Hàng</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Nhân Viên Xử Lý</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.MaHd</td>
                        <td>@item.NgayLap?.ToString("dd/MM/yyyy HH:mm")</td>

                        <td>
                            @if (item.MaKhNavigation != null)
                            {
                                <div class="fw-bold text-primary">@item.MaKhNavigation.TenKh</div>
                                <div class="small text-muted">@item.MaKhNavigation.Sdt</div>
                                <small class="badge bg-info text-dark mt-1">Thành viên</small>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Khách vãng lai</span>
                            }
                        </td>

                        <td class="text-danger fw-bold">
                            @string.Format("{0:N0} ₫", item.TongTien)
                        </td>

                        <td>
                            @if (item.TrangThai == 0)
                            {
                                <span class="badge bg-warning text-dark">Chờ xử lý</span>
                            }
                            else if (item.TrangThai == 1)
                            {
                                <span class="badge bg-primary">Đang xử lý</span>
                            }
                            else if (item.TrangThai == 2)
                            {
                                <span class="badge bg-info text-dark">Đang giao</span>
                            }
                            else if (item.TrangThai == 3)
                            {
                                <span class="badge bg-success">Đã giao</span>
                            }
                            else if (item.TrangThai == 4)
                            {
                                <span class="badge bg-danger">Đã hủy</span>
                            }
                        </td>
                        <td>
                            @(item.MaNvNavigation?.TenNv ?? "---")
                        </td>

                        <td class="text-center">
                            <a asp-action="Details" asp-route-maHd="@item.MaHd" class="btn btn-info btn-sm text-white me-1" title="Xem chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-maHd="@item.MaHd" class="btn btn-warning btn-sm" title="Cập nhật">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>