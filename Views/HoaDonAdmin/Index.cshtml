@model IEnumerable<LAPTOP.Models.HoaDon>

@{
    ViewData["Title"] = "Quản lý Đơn Hàng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary"><i class="bi bi-receipt"></i> @ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow">
        <i class="bi bi-plus-circle"></i> Tạo đơn thủ công
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mã HĐ</th>
                    <th>Ngày Lập</th>
                    <th>Khách Hàng</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Nhân Viên Xử Lý</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.MaHd</td>

                        <td>@item.NgayLap?.ToString("dd/MM/yyyy")</td>

                        <td>
                                <span class="fw-bold">@item.MaKhNavigation?.TenKh</span>
                            @if (item.MaKhNavigation != null)
                            {
                                
                               <small class="badge bg-info text-dark">Thành viên</small>
                                <small class="text-muted">@item.MaKhNavigation.Sdt</small>
                            }
                            else
                            {
                                <span class="text-muted">Khách vãng lai</span>
                            }
                        </td>

                        <td class="text-danger fw-bold">
                            @* Giả sử bạn có cột TongTien, nếu chưa có thì tạm thời để trống hoặc tính sau *@
                             @string.Format("{0:N0} ₫", item.TongTien) 
                        </td>

                        <td>
                            @if (item.TrangThai == 1)
                            {
                                <span class="badge bg-success">Đã thanh toán</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Chờ xử lý</span>
                            }
                        </td>

                        <td>
                            @(item.MaNvNavigation?.TenNv ?? "---")
                        </td>

                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.MaHd" class="btn btn-info btn-sm text-white" title="Xem chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.MaHd" class="btn btn-warning btn-sm" title="Cập nhật trạng thái">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>