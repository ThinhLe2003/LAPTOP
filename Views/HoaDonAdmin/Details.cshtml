@model LAPTOP.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_AdminLayout";

    // Biến tính tiền thủ công
    decimal tongTienTuTinh = 0;
}

<div class="container-fluid">
    <h2 style="color: blue; font-weight: bold;">CHI TIẾT ĐƠN HÀNG #@Model.MaHd</h2>
    <br />
    <a asp-action="Index" class="btn btn-secondary">
        << Quay lại danh sách
    </a>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <div class="card" style="border: 1px solid black; margin-bottom: 20px;">
                <div class="card-header" style="background-color: #00cccc; color: white;">
                    THÔNG TIN KHÁCH HÀNG
                </div>
                <div class="card-body">
                    <p>
                        Khách hàng:
                        <b>@(Model.MaKhNavigation?.TenKh ?? "Khách vãng lai")</b>
                    </p>

                    <p>SĐT: @(Model.MaKhNavigation?.Sdt ?? "---")</p>

                    <p>Ngày đặt: @Model.NgayLap?.ToString("dd/MM/yyyy")</p>

                    <p>
                        Trạng thái:
                        @if (Model.TrangThai == 0)
                        {
                            <span style="color: red; font-weight: bold;">Mới đặt (0)</span>
                        }
                        else if (Model.TrangThai == 1)
                        {
                            <span style="color: blue; font-weight: bold;">Đang xử lý (1)</span>
                        }
                        else if (Model.TrangThai == 2)
                        {
                            <span style="color: orange; font-weight: bold;">Đang giao (2)</span>
                        }
                        else if (Model.TrangThai == 3)
                        {
                            <span style="color: green; font-weight: bold;">Đã giao (3)</span>
                        }
                        else
                        {
                            <span style="color: grey;">Đã hủy</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card" style="border: 1px solid black;">
                <div class="card-header" style="background-color: blue; color: white;">
                    DANH SÁCH SẢN PHẨM MUA
                </div>

                <table class="table table-bordered">
                    <thead>
                        <tr style="background-color: #eee;">
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>SL</th>
                            <th>Giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ChiTietHoaDons)
                        {
                            int soLuong=item.SoLuong ?? 0; 
                            decimal donGia=item.DonGia ?? 0;
                            
                            decimal thanhTien=soLuong * donGia;
                            tongTienTuTinh += thanhTien;

                            <tr>
                                <td>
                                    @if (item.MaSpNavigation != null)
                                    {
                                        <span>@item.MaSpNavigation.TenSp</span>
                                        <br />
                                        <i style="font-size: 12px;">(Mã: @item.MaSp)</i>
                                    }
                                    else
                                    {
                                        <span>SP đã xóa</span>
                                    }
                                </td>
                                <td>
                                    @if (item.MaSpNavigation != null)
                                    {
                                        <img src="@item.MaSpNavigation.HinhAnh" width="60" height="60" style="border: 1px solid #ccc;" />
                                    }
                                </td>
                                <td style="text-align: center;">@item.SoLuong</td>
                                <td>@string.Format("{0:N0}", item.DonGia)</td>
                                <td style="color: red; font-weight: bold;">
                                    @string.Format("{0:N0}", thanhTien)
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4" style="text-align: right; font-weight: bold;">
                                TỔNG CỘNG:
                            </td>
                            <td style="color: red; font-size: 20px; font-weight: bold;">
                                @string.Format("{0:N0} đ", tongTienTuTinh)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>