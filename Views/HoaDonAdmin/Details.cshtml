@model LAPTOP.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-receipt-cutoff"></i> Chi Tiết Đơn Hàng #@Model.MaHd</h2>
        <a asp-action="Index" class="btn btn-secondary shadow">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white fw-bold">
                    <i class="bi bi-person-lines-fill"></i> Thông tin khách hàng
                </div>
                <div class="card-body">
                    <p><strong>Khách hàng:</strong> @(Model.MaKhNavigation?.TenKh ?? "Khách vãng lai")</p>
                    <p><strong>Số điện thoại:</strong> @(Model.MaKhNavigation?.Sdt ?? "---")</p>
                    <p><strong>Ngày đặt hàng:</strong> @Model.NgayLap?.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>
                        <strong>Trạng thái:</strong>
                        @if (Model.TrangThai == 0)
                        {
                            <span class="badge bg-warning text-dark">Mới đặt</span>
                        }
                        else if (Model.TrangThai == 1)
                        {
                            <span class="badge bg-info">Đang giao</span>
                        }
                        else if (Model.TrangThai == 2)
                        {
                            <span class="badge bg-success">Hoàn thành</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Đã hủy</span>
                        }
                    </p>
                </div>
            </div>

        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-cart-check"></i> Danh sách sản phẩm
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietHoaDons)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (item.MaSpNavigation != null)
                                            {
                                                <img src="@item.MaSpNavigation.HinhAnh" alt="sp" style="width: 50px; height: 50px; object-fit: contain;" class="me-2 border rounded">
                                                <div>
                                                    <span class="fw-bold text-dark">@item.MaSpNavigation.TenSp</span>
                                                    <br><small class="text-muted">Mã SP: @item.MaSp</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span>Sản phẩm đã bị xóa</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center fw-bold">@item.SoLuong</td>
                                    <td class="text-end">@string.Format("{0:N0} ₫", item.DonGia)</td>
                                    <td class="text-end text-danger fw-bold">
                                        @string.Format("{0:N0} ₫", item.SoLuong * item.DonGia)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold fs-5">TỔNG CỘNG:</td>
                                <td class="text-end fw-bold fs-4 text-danger">
                                    @string.Format("{0:N0} ₫", Model.TongTien)
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>