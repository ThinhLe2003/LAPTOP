@model LAPTOP.Models.HoaDon

@{
    ViewData["Title"] = "Cập nhật đơn hàng";
    Layout = "_AdminLayout.cshtml"; // Đảm bảo đường dẫn đúng
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cập nhật thông tin đơn hàng: #@Model.MaHd</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaHd" />
            <input type="hidden" asp-for="MaKh" />
            <input type="hidden" asp-for="NgayLap" />
            <input type="hidden" asp-for="TongTien" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label font-weight-bold">Ngày lập đơn</label>
                        <input value="@Model.NgayLap?.ToString("dd/MM/yyyy HH:mm")" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label class="control-label font-weight-bold">Khách hàng</label>
                        <select asp-for="MaKh" class="form-control" asp-items="ViewBag.MaKh" disabled></select>
                    </div>

                    <div class="form-group">
                        <label class="control-label font-weight-bold">Tổng tiền</label>
                        <input value="@string.Format("{0:0,0} đ", Model.TongTien)" class="form-control" readonly style="color: red; font-weight: bold;" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaNv" class="control-label font-weight-bold text-primary">Nhân viên xử lý</label>
                        <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv">
                            <option value="">-- Chưa phân công --</option>
                        </select>
                        <span asp-validation-for="MaNv" class="text-danger"></span>
                        <small class="form-text text-muted">Chọn nhân viên để giao trách nhiệm xử lý đơn này.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="TrangThai" class="control-label font-weight-bold text-primary">Trạng thái đơn hàng</label>
                        <select asp-for="TrangThai" class="form-control">
                            <option value="0">Chờ xử lý</option>
                            <option value="1">Đang xử lý (Đã phân công)</option>
                            <option value="2">Đang giao hàng</option>
                            <option value="3">Hoàn tất</option>
                            <option value="4">Hủy đơn</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>