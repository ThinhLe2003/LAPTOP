@model LAPTOP.Models.KhachHang

@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="fw-bold text-danger">@Model.TenKh</h1>
        <p class="text-muted fs-6 mb-3">
            Mã khách hàng: <span class="badge bg-secondary">@Model.MaKh</span>
        </p>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light fw-bold text-uppercase">
                <i class="bi bi-person-lines-fill me-2"></i>Thông tin cơ bản
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <i class="bi bi-telephone-fill me-2 text-success"></i>
                    <strong>SĐT:</strong> @Model.Sdt
                </li>

                <li class="list-group-item">
                    <i class="bi bi-gender-ambiguous me-2 text-primary"></i>
                    <strong>Giới tính:</strong>
                    <span class="@(Model.GioiTinh == true ? "text-primary" : "text-danger")">
                        @(Model.GioiTinh == true ? "Nam" : Model.GioiTinh == false ? "Nữ" : "Chưa xác định")
                    </span>
                </li>

                <li class="list-group-item">
                    <i class="bi bi-geo-alt-fill me-2 text-danger"></i>
                    <strong>Địa chỉ:</strong> @Model.DiaChi
                </li>

                <li class="list-group-item">
                    <i class="bi bi-envelope-at-fill me-2 text-warning"></i>
                    <strong>Email:</strong> @Model.Email
                </li>

                <li class="list-group-item text-break">
                    <i class="bi bi-shield-lock-fill me-2 text-dark"></i>
                    <strong>Password (Hash):</strong> @Model.PasswordHash
                </li>
            </ul>
        </div>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>
</div>