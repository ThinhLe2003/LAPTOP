@model LAPTOP.Models.KhachHang
@{
    ViewData["Title"] = "Thêm khách hàng mới";
    Layout="_AdminLayout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <div class="khachhang-container">
        <div class="khachhang-header create">
            <i class="bi bi-person-plus-fill me-2"></i> @ViewData["Title"]
        </div>

        <div class="khachhang-body">
            <form asp-action="Create" method="post" class="khachhang-form">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                   
                    <div class="col-md-6">
                        <label asp-for="TenKh" class="form-label">Họ tên: </label>
                        <input asp-for="TenKh" class="form-control" placeholder="Nguyễn Văn A" />
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-6">
                        <label asp-for="Sdt" class="form-label">Số điện thoại</label>
                        <input asp-for="Sdt" class="form-control" placeholder="0901234567" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="QueQuan" class="form-label">Quê quán</label>
                        <input asp-for="QueQuan" class="form-control" placeholder="TP.HCM" />
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-12">
                        <label asp-for="DiaChi" class="form-label">Địa chỉ hiện tại</label>
                        <input asp-for="DiaChi" class="form-control" placeholder="123 Đường ABC, Quận 1, TP.HCM" />
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-4">
                        <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                        <select asp-for="GioiTinh" class="form-select">
                            <option value="">-- Chọn --</option>
                            <option value="true">Nam</option>
                            <option value="false">Nữ</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label">Email: </label>
                        <input asp-for="Email" class="form-control" placeholder="abc@gmail.com.vn" />
                    </div>
                  
                </div>

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Thêm khách hàng
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts { <partial name="_ValidationScriptsPartial" /> }
</body>
</html>