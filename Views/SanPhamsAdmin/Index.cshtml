@model IEnumerable<LAPTOP.Models.SanPham>
@{
    ViewData["Title"] = "Quản Lý Sản Phẩm";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-danger"><i class="bi bi-box-seam"></i> @ViewData["Title"] (@Model.Count() sản phẩm)</h2>
    <a asp-action="Create" class="btn btn-success btn-lg shadow">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.TenSp)</th>
                    <th>@Html.DisplayNameFor(m => m.Gia)</th>
                    <th>Ảnh</th>
                    <th>@Html.DisplayNameFor(m => m.SoLuongTon)</th>
                    <th>Loại SP</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.SoLuongTon <= 5 ? "table-warning" : "")">
                        <td class="fw-bold">@item.TenSp</td>
                        <td class="text-danger fw-bold">@string.Format("{0:N0}", item.Gia) ₫</td>
                        <td>
                            <img src="@item.HinhAnh" alt="@item.TenSp" width="80" class="rounded shadow-sm" />
                        </td>
                        <td class="text-center fw-bold @(item.SoLuongTon <= 5 ? "text-danger" : "")">
                            @item.SoLuongTon
                            @(item.SoLuongTon <= 5 ? Html.Raw("<br><small>Sắp hết!</small>") : "")
                        </td>

                      

                        <td>
                            @if (item.LoaiSanPham != null)
                            {
                                <span class="badge bg-primary fs-6">@item.LoaiSanPham.TenLoai</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Chưa chọn loại</span>
                            }
                        </td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaSp" class="btn btn-warning btn-sm" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-info btn-sm text-white" title="Chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaSp" class="btn btn-danger btn-sm" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>