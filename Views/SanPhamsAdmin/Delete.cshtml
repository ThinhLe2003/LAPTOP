@model LAPTOP.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "_AdminLayout";
}

<div class="sanpham-body">
    <div class="text-center mb-4">
        <h5 class="text-danger"><i class="bi bi-person-x-fill"></i> @Model.TenSp</h5>
        <p>Bạn có <strong>chắc chắn</strong> muốn xóa sản phẩm này?</p>
    </div>

<div class="card shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light rounded p-3">
                <img src="@Model.HinhAnh"
                     class="img-fluid rounded shadow"
                     alt="@Model.TenSp"
                     style="max-height: 300px; object-fit: contain;">
            </div>

            <div class="col-md-8">
                <h4 class="text-primary mb-3 fw-bold">@Model.TenSp</h4>

                <table class="table table-bordered table-hover">
                    <tbody>
                        <tr>
                            <th class="bg-light w-25">Mã sản phẩm:</th>
                            <td><span class="badge bg-secondary">@Model.MaSp</span></td>
                        </tr>
                        <tr>
                            <th class="bg-light">Giá bán:</th>
                            <td class="text-danger fw-bold">@string.Format("{0:N0}", Model.Gia) VNĐ</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Số lượng tồn:</th>
                            <td>@Model.SoLuongTon</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Loại sản phẩm:</th>
                            <td>
                                @if (Model.MaLoai != null)
                                {
                                    @Model.LoaiSanPham.TenLoai
                                }
                                else
                                {
                                    @Model.MaLoai
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4">
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaSp" />

                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> Xác nhận xóa
                        </button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2 shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i> Hủy bỏ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>