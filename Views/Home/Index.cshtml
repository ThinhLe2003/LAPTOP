@model IEnumerable<LAPTOP.Models.SanPham>

@{
    ViewData["Title"] = "Laptop Xách Tay Shop - Laptop Mỹ Nhật Giá Tốt Nhất";
    // Đã xóa logic Flash Sale phức tạp
}

<section class="position-relative overflow-hidden" style="height: 80vh; min-height: 600px;">
    <img src="https://images.unsplash.com/photo-1603302576837-37561b2e2302?w=1920&h=1080&fit=crop"
         class="w-100 h-100 position-absolute top-0 start-0"
         style="object-fit: cover; filter: brightness(0.6);"
         alt="Banner Laptop">

    <div class="container h-100 position-relative">
        <div class="row h-100 align-items-center">
            <div class="col-lg-6 text-white">
                <h1 class="display-1 fw-bold">LAPTOPSHOP</h1>
                <h2 class="display-4 fw-bold text-danger">CHUYÊN LAPTOP XÁCH TAY MỸ - NHẬT</h2>
                <p class="fs-3 my-4">Chỉ từ 5 triệu • Bảo hành 12-36 tháng • 1 đổi 1 trong 30 ngày</p>

                <a asp-controller="SanPham" asp-action="Index" class="btn btn-danger text-white px-5 py-4 rounded-pill fs-4 fw-bold shadow-lg">
                    XEM TẤT CẢ SẢN PHẨM →
                </a>
            </div>
        </div>
    </div>
</section>

<section class="container my-5 pt-5">
    <h2 class="text-center fw-bold fs-3 mb-5">
        CHỌN LAPTOP THEO <span class="text-danger">THƯƠNG HIỆU</span>
    </h2>

    <div class="row row-cols-2 row-cols-md-4 g-4">
        <div class="col">
            <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Dell" class="text-decoration-none">
                <div class="position-relative overflow-hidden rounded-4 shadow hover-lift text-white text-center" style="height: 200px; background: linear-gradient(135deg, #0076CE, #004E8C);">
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <h3 class="fw-bold mb-0">DELL</h3>
                        <small>Bền bỉ - Ổn định</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="SanPham" asp-action="Index" asp-route-hang="HP" class="text-decoration-none">
                <div class="position-relative overflow-hidden rounded-4 shadow hover-lift text-white text-center" style="height: 200px; background: linear-gradient(135deg, #0096D6, #00567D);">
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <h3 class="fw-bold mb-0">HP</h3>
                        <small>Thời trang - Mỏng nhẹ</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Lenovo" class="text-decoration-none">
                <div class="position-relative overflow-hidden rounded-4 shadow hover-lift text-white text-center" style="height: 200px; background: linear-gradient(135deg, #E2231A, #A61912);">
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <h3 class="fw-bold mb-0">LENOVO</h3>
                        <small>ThinkPad - Bàn phím tốt</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Asus" class="text-decoration-none">
                <div class="position-relative overflow-hidden rounded-4 shadow hover-lift text-white text-center" style="height: 200px; background: linear-gradient(135deg, #00539B, #002E56);">
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <h3 class="fw-bold mb-0">ASUS</h3>
                        <small>Sáng tạo - Gaming</small>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<section class="container my-5 pb-5">
    <h2 class="text-center fw-bold fs-3 mb-5">
        HÌNH ẢNH <span class="text-danger">THỰC TẾ</span> TẠI SHOP
    </h2>
    <div class="container mt-4">
        <h2 class="text-center mb-4 fw-bold text-danger">💻 LAPTOP NỔI BẬT</h2>

        <div class="row">
            @foreach (var sp in Model)
            {
                <div class="col-lg-3 col-md-4 col-6 mb-4">
                    <div class="card shadow-sm h-100 product-card">
                        <img src="@sp.HinhAnh"
                             class="card-img-top"
                             alt="@sp.TenSp"
                             style="height:200px; object-fit:contain; padding: 10px;">

                        <div class="card-body text-center d-flex flex-column">
                            <h6 class="card-title flex-grow-1">@sp.TenSp</h6>

                            <p class="text-danger fw-bold fs-5">@string.Format("{0:N0} ₫", sp.Gia)</p>

                            <a asp-controller="SanPham"
                               asp-action="Details"
                               asp-route-id="@sp.MaSp"
                               class="btn btn-outline-primary btn-sm mt-auto">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <a asp-controller="SanPham" asp-action="Index">
                <img src="~/img/katana laptop.jpg"
                     class="img-fluid rounded-4 shadow hover-lift w-100"
                     style="height: 420px; object-fit: cover;"
                     alt="Laptop xách tay Mỹ">
            </a>
        </div>

        <div class="col-12 col-md-6">
            <div class="row g-3">
                <div class="col-6">
                    <img src="~/img/Dell-Latitude.jpg" class="img-fluid rounded-4 shadow hover-lift w-100" style="height: 205px; object-fit: cover;" alt="Dell Latitude">
                </div>
                <div class="col-6">
                    <img src="~/img/HP-Elitebook.jpg" class="img-fluid rounded-4 shadow hover-lift w-100" style="height: 205px; object-fit: cover;" alt="HP EliteBook">
                </div>
                <div class="col-6">
                    <img src="~/img/Lenovo-Thinkpad-2.jpg" class="img-fluid rounded-4 shadow hover-lift w-100" style="height: 205px; object-fit: cover;" alt="Lenovo ThinkPad">
                </div>
                <div class="col-6">
                    <img src="~/img/dell-g15.jpg" class="img-fluid rounded-4 shadow hover-lift w-100" style="height: 205px; object-fit: cover;" alt="Dell Gaming">
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="SanPham" asp-action="Index"
           class="btn btn-outline-danger px-5 py-3 rounded-pill fw-bold fs-5">
            XEM KHO MÁY CÓ SẴN →
        </a>
    </div>
</section>