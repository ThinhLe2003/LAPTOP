<div class="container text-center mt-5 mb-5">
    <div class="card shadow-lg p-5 border-0 rounded-4" style="max-width: 600px; margin: 0 auto;">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>
        <h2 class="fw-bold text-success mb-3">Đặt Hàng Thành Công!</h2>
        <p class="text-muted fs-5">
            Cảm ơn bạn đã mua sắm tại <strong>Laptop Shop</strong>.<br>
            Đơn hàng của bạn đang được xử lý.
        </p>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">
                @ViewBag.Message
            </div>
        }

        <div class="d-grid gap-2 col-8 mx-auto mt-4">
            <a href="/" class="btn btn-primary btn-lg rounded-pill">
                <i class="bi bi-house-door-fill me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    </div>
</div>