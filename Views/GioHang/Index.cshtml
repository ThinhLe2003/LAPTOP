@model IEnumerable<LAPTOP.Models.GioHangItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    // Tính tổng tiền nếu chưa có trong ViewBag
    decimal tongTien = 0;
    if (ViewBag.TongTien != null)
    {
        tongTien = (decimal)ViewBag.TongTien;
    }
    else if (Model != null)
    {
        tongTien = Model.Sum(x => x.ThanhTien);
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fa; /* Màu nền xám nhẹ hiện đại */
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
        }

        .cart-header {
            background-color: #fff;
            border-bottom: 2px solid #f0f0f0;
            padding: 15px;
            font-weight: 600;
            color: #555;
        }

        .product-img {
            width: 80px;
            height: 80px;
            object-fit: cover; /* Giữ ảnh không bị méo */
            border-radius: 10px;
            border: 1px solid #eee;
        }

        .product-name {
            font-weight: 600;
            color: #333;
            text-decoration: none;
            display: block;
            margin-bottom: 5px;
        }

            .product-name:hover {
                color: #0d6efd;
            }

        .quantity-input {
            width: 60px !important;
            text-align: center;
            border-radius: 5px 0 0 5px !important;
        }

        .btn-update {
            border-radius: 0 5px 5px 0 !important;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 0.95rem;
        }

        .total-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #dc3545; /* Màu đỏ nổi bật */
        }

        .btn-checkout {
            padding: 12px;
            font-weight: 600;
            border-radius: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        /* Table styles */
        .table > :not(caption) > * > * {
            vertical-align: middle; /* Căn giữa theo chiều dọc */
            padding: 1rem 0.5rem;
            border-bottom-color: #f0f0f0;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold mb-0 text-black">Giỏ hàng (@Model.Count() sản phẩm)</h3>
                </div>

                <div class="card mb-4">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="cart-header">
                                <tr>
                                    <th scope="col" style="width: 45%">Sản phẩm</th>
                                    <th scope="col" style="width: 15%">Đơn giá</th>
                                    <th scope="col" style="width: 20%">Số lượng</th>
                                    <th scope="col" style="width: 15%">Thành tiền</th>
                                    <th scope="col" style="width: 5%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.HinhAnh" class="product-img me-3" alt="@item.TenSp">
                                                    <div>
                                                        <a asp-action="Details" asp-controller="SanPham" asp-route-id="@item.MaSp" class="product-name">
                                                            @item.TenSp
                                                        </a>
                                                        <small class="text-muted">Mã SP: @item.MaSp</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="fw-bold text-muted">
                                                @item.Gia.ToString("#,##0") ₫
                                            </td>

                                            <td>
                                                <form asp-action="UpdateQuantity" method="post" class="d-flex">
                                                    <input type="hidden" name="id" value="@item.MaSp" />
                                                    <div class="input-group input-group-sm" style="width: 100px;">
                                                        <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control quantity-input" />
                                                        <button type="submit" class="btn btn-outline-secondary btn-update" title="Cập nhật">
                                                            <i class="bi bi-arrow-clockwise"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </td>

                                            <td class="fw-bold text-primary">
                                                @item.ThanhTien.ToString("#,##0") ₫
                                            </td>

                                            <td class="text-end">
                                                <a asp-action="Remove" asp-route-id="@item.MaSp" class="text-danger" title="Xóa sản phẩm">
                                                    <i class="bi bi-trash fs-5"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <i class="bi bi-cart-x fs-1 text-muted"></i>
                                            <p class="mt-3 text-muted">Giỏ hàng của bạn đang trống</p>
                                            <a href="/" class="btn btn-primary btn-sm mt-2">Mua sắm ngay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mb-4">
                    <a href="/" class="text-decoration-none text-dark">
                        <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">Cộng giỏ hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="summary-item">
                            <span class="text-muted">Tạm tính:</span>
                            <span class="fw-bold">@tongTien.ToString("#,##0") ₫</span>
                        </div>
                        <div class="summary-item">
                            <span class="text-muted">Phí vận chuyển:</span>
                            <span class="text-success">Miễn phí</span>
                        </div>
                        <div class="summary-item">
                            <span class="text-muted">Thuế VAT (8%):</span>
                            <span>Đã bao gồm</span>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="fw-bold fs-5">Tổng cộng:</span>
                            <span class="total-price">@tongTien.ToString("#,##0") ₫</span>
                        </div>

                        <a asp-action="Checkout" class="btn btn-primary btn-checkout w-100 shadow">
                            TIẾN HÀNH THANH TOÁN
                        </a>

                        <div class="mt-3 text-center">
                            <img src="https://vnpay.vn/assets/images/logo-icon/logo-primary.svg" height="25" alt="VNPAY" class="mx-1 opacity-75">
                            <i class="bi bi-credit-card-2-front fs-4 mx-1 text-secondary"></i>
                            <i class="bi bi-cash-coin fs-4 mx-1 text-secondary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>