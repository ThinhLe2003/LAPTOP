@model LAPTOP.Models.GioHangItem

<h2>Chi tiết sản phẩm</h2>

<div class="card" style="width: 18rem;">
    <img src="@Model.HinhAnh" class="card-img-top" alt="@Model.TenSp">
    <div class="card-body">
        <h5 class="card-title">@Model.TenSp</h5>
        <p class="card-text">Giá: @Model.Gia.ToString("N0")</p>
        <p class="card-text">Số lượng: @Model.SoLuong</p>
        <p class="card-text">Thành tiền: @Model.ThanhTien.ToString("N0")</p>
        <a asp-action="Index" class="btn btn-secondary">Quay lại giỏ hàng</a>
    </div>
</div>
