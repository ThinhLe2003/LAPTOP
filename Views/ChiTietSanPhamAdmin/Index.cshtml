@model IEnumerable<LAPTOP.Models.ChiTietSanPham>
    @{
    ViewData["Title"] = "Quản Lý Chi Tiết Sản Phẩm";
    Layout = "_AdminLayout";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger"><i class="bi bi-card-list"></i> @ViewData["Title"] (@Model.Count() sản phẩm)</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow">
            <i class="bi bi-plus-circle"></i> Thêm chi tiết mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                    <th>CPU</th>
                        <th>RAM</th>
                        <th>VGA</th>
                        <th>Màn hình</th>
                        <th>Cổng giao tiếp</th>
                        <th>Pin</th>
                        <th>Trọng lượng</th>
                        <th>Sản phẩm</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cpu</td>
                        <td>@item.Ram</td>
                        <td>@item.Vga</td>
                        <td>@item.ManHinh</td>
                        <td>@item.KichThuoc</td>
                        <td>@item.MauSac</td>
                        <td>@item.HeDieuHanh</td>
                        <td>
                            @if(item.MaSpNavigation != null)
                            {
                            <span class="badge bg-primary">@item.MaSpNavigation.TenSp</span>
                            }
                            else
                            {
                            <span class="badge bg-secondary">Chưa chọn SP</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaSp" class="btn btn-warning btn-sm" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-info btn-sm text-white" title="Chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaSp" class="btn btn-danger btn-sm" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
