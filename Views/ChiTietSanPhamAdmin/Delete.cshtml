@model LAPTOP.Models.ChiTietSanPham

@{
    ViewData["Title"] = "Xóa chi tiết sản phẩm";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <div class="nhanvien-body">
        <div class="text-center mb-4">
            <h5 class="text-danger"><i class="bi bi-pc-x-fill"></i> @Model.MaSpNavigation.TenSp</h5>
            <p>Bạn có <strong>chắc chắn</strong> muốn xóa chi tiết này?</p>
        </div>
    </div>
<div>
    <hr />
            <table class="table table-bordered">
                <tr><th width="35%">Mã sản phẩm: </th><td><strong>@Model.MaSpNavigation.MaSp</strong></td></tr>
                <tr><th>CPU: </th><td>@Model.Cpu</td></tr>
                <tr><th>RAM: </th><td>@Model.Ram</td></tr>
                <tr><th>VGA: </th><td>@Model.Vga</td></tr>
                <tr><th>Màn hình: </th><td>@Model.ManHinh</td></tr>
                <tr><th>Cổng giao tiếp: </th><td>@Model.KichThuoc</td></tr>
                <tr><th>Pin: </th><td>@Model.MauSac</td></tr>
                <tr><th>Trọng lượng: </th><td>@Model.HeDieuHanh</td></tr>
                
            </table>
   
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaSp"  />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Có, xóa vĩnh viễn
                </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Hủy
            </a>
    </form>
</div>
</body>
</html>
