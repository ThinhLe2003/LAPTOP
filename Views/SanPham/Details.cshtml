@model LAPTOP.Models.SanPham

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.TenSp;
    // Hứng danh sách sản phẩm tương tự từ Controller
    var relatedProducts = ViewBag.SanPhamTuongTu as List<LAPTOP.Models.SanPham>;
}

<div class="container py-5">
    <div class="row gx-5">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <img src="@Model.HinhAnh" class="card-img-top img-fluid" alt="@Model.TenSp" style="object-fit: contain; max-height: 500px;">
            </div>
        </div>

        <div class="col-md-6">
            <h5 class="text-muted text-uppercase small">@Model.LoaiSanPham?.TenLoai</h5>
            <h1 class="display-5 fw-bolder">@Model.TenSp</h1>

            <div class="fs-4 mb-3">
                <span class="text-danger fw-bold h3">@string.Format("{0:N0}", Model.Gia) đ</span>
            </div>

            <p class="lead mb-4">
                Tình trạng:
                @if (Model.SoLuongTon > 0)
                {
                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Còn hàng (@Model.SoLuongTon)</span>
                }
                else
                {
                    <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Hết hàng</span>
                }
            </p>

            <div class="d-flex mb-4">
                @if (Model.SoLuongTon > 0)
                {
                    <a asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@Model.MaSp" class="btn btn-danger btn-lg flex-shrink-0 me-3 w-100 shadow-sm">
                        <i class="bi bi-cart-plus-fill me-2"></i> MUA NGAY
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg flex-shrink-0 me-3 w-100" disabled>
                        TẠM HẾT HÀNG
                    </button>
                }
            </div>

            <div class="card border-danger border-1 shadow-sm">
                <div class="card-header bg-danger text-white text-uppercase fw-bold">
                    <i class="bi bi-gift-fill me-2"></i>Ưu đãi đặc quyền
                </div>
                <div class="card-body bg-light">
                    <ul class="list-unstyled mb-0 small">
                        <li class="mb-2 d-flex"><i class="bi bi-check-circle-fill text-success me-2"></i><span>Hàng chính hãng, bảo hành 12 tháng.</span></li>
                        <li class="mb-2 d-flex"><i class="bi bi-check-circle-fill text-success me-2"></i><span>Tặng Balo + Chuột không dây trị giá 500k.</span></li>
                        <li class="mb-2 d-flex"><i class="bi bi-check-circle-fill text-success me-2"></i><span>Cài đặt phần mềm miễn phí trọn đời.</span></li>
                        <li class="d-flex"><i class="bi bi-check-circle-fill text-success me-2"></i><span>Hỗ trợ trả góp 0%.</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-4 text-uppercase fw-bold">
                <i class="bi bi-cpu me-2"></i>Thông số kỹ thuật
            </h4>

            @if (Model.ChiTietSanPham != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover shadow-sm" style="max-width: 800px;">
                        <tbody>
                            <tr><th class="w-25 bg-light">CPU</th><td>@Model.ChiTietSanPham.Cpu</td></tr>
                            <tr><th class="bg-light">RAM</th><td>@Model.ChiTietSanPham.Ram</td></tr>
                            <tr><th class="bg-light">Màn hình</th><td>@Model.ChiTietSanPham.ManHinh</td></tr>
                            <tr><th class="bg-light">VGA</th><td>@Model.ChiTietSanPham.Vga</td></tr>
                            <tr><th class="bg-light">Cổng giao tiếp</th><td>@Model.ChiTietSanPham.KichThuoc</td></tr>
                            <tr><th class="bg-light">Pin</th><td>@Model.ChiTietSanPham.MauSac</td></tr>
                            <tr><th class="bg-light">Trọng lượng</th><td>@Model.ChiTietSanPham.HeDieuHanh</td></tr>
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">Sản phẩm này chưa cập nhật thông số chi tiết.</div>
            }
        </div>
    </div>

    @if (relatedProducts != null && relatedProducts.Count > 0)
    {
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="border-bottom pb-2 mb-4 text-uppercase fw-bold text-danger">
                    <i class="bi bi-stars me-2"></i>Có thể bạn sẽ thích
                </h4>
            </div>

            @foreach (var item in relatedProducts)
            {
                <div class="col-6 col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div style="height: 200px;" class="p-3 bg-white rounded d-flex align-items-center justify-content-center">
                            <a asp-controller="SanPham" asp-action="Details" asp-route-id="@item.MaSp" class="d-block h-100 w-100">
                                <img src="@item.HinhAnh"
                                     class="card-img-top"
                                     alt="@item.TenSp"
                                     style="height: 100%; width: 100%; object-fit: contain;">
                            </a>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; height: 40px;">
                                <a asp-controller="SanPham" asp-action="Details" asp-route-id="@item.MaSp" class="text-decoration-none text-dark fw-bold" title="@item.TenSp">
                                    @item.TenSp
                                </a>
                            </h6>

                            <div class="mt-auto">
                                <span class="text-danger fw-bold">@string.Format("{0:N0}", item.Gia) đ</span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0">
                            <a asp-controller="Sanpham" asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-outline-danger w-100 btn-sm">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>