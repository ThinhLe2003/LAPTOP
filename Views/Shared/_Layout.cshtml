<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Laptop Xách Tay Shop</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Top Bar Đỏ -->
    <div class="bg-red text-white text-center small py-2 fw-bold d-none d-md-block top-bar-info">
        <div class="container d-flex justify-content-between flex-wrap">
            <span>Hotline: 0903 344 188 | 0909 344 188</span>
            <span>617 Đường 3 Tháng 2, P.8, Quận 10, TP.HCM</span>
        </div>
    </div>

    <!-- Header + Menu -->
    <header class="bg-white shadow-sm sticky-top">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-4 col-md-3">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo laptopshop.png" alt="Logo" style="max-width: 160px; height: auto;" class="img-fluid">
                    </a>
                </div>
                <div class="col-md-6 my-2 my-md-0">
                    <form class="d-flex">
                        <input type="search" class="form-control rounded-start-pill shadow-sm"
                               placeholder="Tìm kiếm sản phẩm..." style="height:50px">
                        <button class="btn btn-red rounded-end-pill px-4">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
                <div class="col-8 col-md-3 text-end">
                    <a asp-controller="GioHang" asp-action="Index" class="text-dark me-4 position-relative">
                        <i class="bi bi-cart3 fs-3"></i>
                        <span class="badge bg-red rounded-pill position-absolute top-0 start-100 translate-middle">0</span>
                    </a>
                    <span class="text-red fw-bold d-block d-md-inline">0909 344 188</span>
                </div>
            </div>
        </div>

        <!-- Menu chính -->
        <nav class="bg-black text-white d-none d-lg-block position-relative overflow-hidden">
            <div class="shine-effect"></div>
            <div class="container py-3">
                <div class="d-flex justify-content-center gap-5 flex-wrap">
                    @{
                        var menus = new (string Text, string Url, string Badge)[]
                        {
                            ("LAPTOP", "", ""),
                            ("GAMING", "gaming", "RTX 50"),
                            ("ĐỒ HỌA", "do-hoa", "HOT"),
                            ("VĂN PHÒNG", "van-phong", "DƯỚI 10TR"),
                            ("MACBOOK", "macbook", "M4 NEW"),
                            ("TIN TỨC", "tin-tuc", "")
                        };
                    }
                    @foreach (var m in menus)
                    {
                    <a asp-controller="SanPham" asp-action="Index" asp-route-loai="@m.Url"
                       class="text-white text-decoration-none fw-bold fs-5 menu-glow">
                        @m.Text
                        @if (!string.IsNullOrEmpty(m.Badge))
                            {
                        <span class="badge bg-danger ms-2">@m.Badge</span>
                            }
                    </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="min-vh-100 pt-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-3 mb-4"><h5 class="text-red fw-bold">LAPTOP XÁCH TAY SHOP</h5><p class="small">Hàng Mỹ - Nhật chính hãng 100%<br>Bảo hành 12-36 tháng • 1 đổi 1</p></div>
                <div class="col-md-3 mb-4"><h6 class="fw-bold">HỖ TRỢ KHÁCH HÀNG</h6><ul class="list-unstyled small"><li>Hướng dẫn mua hàng</li><li>Chính sách bảo hành</li><li>Trả góp 0%</li><li>Giao hàng toàn quốc</li></ul></div>
                <div class="col-md-3 mb-4"><h6 class="fw-bold">VỀ CHÚNG TÔI</h6><ul class="list-unstyled small"><li>Giới thiệu</li><li>Tuyển dụng</li><li>Hệ thống cửa hàng</li></ul></div>
                <div class="col-md-3 text-center text-md-end">
                    <h6 class="fw-bold">HOTLINE: 0909 344 188</h6>
                    <p class="small">Hỗ trợ 24/7</p>
                    <div class="d-flex gap-3 justify-content-center justify-content-md-end mt-3">
                        <a href="#" class="text-white fs-4"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-messenger"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary">
            <p class="text-center small mb-0">© 2025 Laptop Xách Tay Shop - All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Cho phép View con thêm script -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>