<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Laptop Xách Tay Shop</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- HEADER ĐỎ + MENU ĐEN LIỀN MẠCH, NỀN ĐỎ KHÔNG CHE MENU – GIỐNG 100% WEBSITE GỐC -->
    <div class="bg-red shadow-lg sticky-top">
        <!-- Nền đỏ bọc phần header -->
        <div class="container">
            <div class="d-flex align-items-center justify-content-between flex-wrap py-3 gap-3">
                <!-- Logo -->
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo laptopshop.png" alt="Laptop Xách Tay Shop" style="height: 62px;">
                </a>

                <!-- Search bar -->
                <form class="flex-grow-1 mx-md-4" style="max-width: 580px;" asp-controller="SanPham" asp-action="TimKiem">
                    <div class="position-relative">
                        <input type="search" name="keyword" class="form-control search-input" value="@ViewBag.Keyword"
                               placeholder="Gõ tên hoặc model máy để tìm !"
                               style="height: 50px; border-radius: 30px; padding-right: 60px;">
                        <button type="submit" class="position-absolute end-0 top-50 translate-middle-y btn bg-dark text-white"
                                style="width: 46px; height: 46px; border-radius: 50%; margin-right: 4px;">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>

                <!-- Hotline + Địa chỉ + Giỏ hàng -->
                <div class="d-flex align-items-center gap-4 text-white">
                    <div class="text-end">
                        <i class="bi bi-telephone-fill fs-4"></i>
                        <span class="ms-2 fw-bold" style="font-size: 1.5rem;">0901234567</span><br>
                        <small style="opacity: 0.9;">0123456789</small>
                    </div>
                    <div class="text-end d-none d-lg-block">
                        <a href="https://www.google.com/maps/place/180+Cao+L%E1%BB%97,+Ph%C6%B0%E1%BB%9Dng+4,+Qu%E1%BA%ADn+8,+Th%C3%A0nh+ph%E1%BB%91+H%E1%BB%93+Ch%C3%AD+Minh+70000,+Vi%E1%BB%87t+Nam/"
                           target="_blank"
                           class="text-decoration-none text-white ms-3">
                            <i class="bi bi-geo-alt-fill me-1"></i> 180 Cao Lỗ, phường Chánh Hưng, HCM
                        </a>
                    </div>
                    <a asp-controller="GioHang" asp-action="Index" class="position-relative text-white">
                        <i class="bi bi-cart3 fs-2"></i>
                        <span class="badge bg-white text-red rounded-pill position-absolute top-0 start-100 translate-middle" style="font-size: 0.7rem;">0</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Kết thúc nền đỏ -->
    <!-- Thanh menu đen dính sát ngay dưới phần đỏ, không bị nền đỏ che -->
    <nav class="bg-black text-white position-relative overflow-hidden" style="margin-top: -1px;">
        <div class="shine-effect"></div>
        <div class="container d-flex justify-content-center align-items-center gap-5 py-3 flex-wrap">
            @{
                // SỬA Ở ĐÂY: Thay chữ bằng số ID (int) khớp với Database
                var menus = new (string Text, int? Id, string Badge)[]
                {
            ("TẤT CẢ",      null, ""),  // null = Hiện tất cả
            ("GAMING",      1,    ""), // ID 1 = Laptop Gaming
            ("ĐỒ HỌA",      4,    "HOT"),    // ID 4 = Laptop Đồ họa
            ("VĂN PHÒNG",   2,    ""), // ID 2 = Laptop Văn phòng
            ("MACBOOK",     3,    "M4 NEW"), // ID 3 = Macbook
            ("PHỤ KIỆN",    5,    "SALE")    // ID 5 = Phụ Kiện
                };
            }

            @foreach (var m in menus)
            {
                @* QUAN TRỌNG: asp-route-maLoai (phải trùng tên tham số bên Controller) *@
                <a asp-controller="SanPham" asp-action="Index" asp-route-maLoai="@m.Id"
                   class="text-white text-decoration-none menu-glow text-uppercase fw-bold">
                    @m.Text
                    @if (!string.IsNullOrEmpty(m.Badge))
                    {
                        <span class="badge bg-danger ms-2" style="font-size: 0.7rem;">@m.Badge</span>
                    }
                </a>
            }
        </div>
    </nav>

    <main class="min-vh-100 pt-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-3 mb-4"><h5 class="text-red fw-bold">LAPTOP XÁCH TAY SHOP</h5><p class="small">Hàng Mỹ - Nhật chính hãng 100%<br>Bảo hành 12-36 tháng • 1 đổi 1</p></div>
                <div class="col-md-3 mb-4"><h6 class="fw-bold">HỖ TRỢ KHÁCH HÀNG</h6><ul class="list-unstyled small"><li>Hướng dẫn mua hàng</li><li>Chính sách bảo hành</li><li>Trả góp 0%</li><li>Giao hàng toàn quốc</li></ul></div>
                <div class="col-md-3 mb-4"><h6 class="fw-bold">VỀ CHÚNG TÔI</h6><ul class="list-unstyled small"><li>Giới thiệu</li><li>Tuyển dụng</li><li>Hệ thống cửa hàng</li></ul></div>
                <div class="col-md-3 text-center text-md-end">
                    <h6 class="fw-bold">HOTLINE: 0909 344 188</h6>
                    <p class="small">Hỗ trợ 24/7</p>
                    <div class="container d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/" class="text-white fs-4 text-decoration-none">LAPTOPSHOP</a>
                        </div>
                        <div class="social-icons">
                            <!-- TikTok -->
                            @{
                                var tiktokUrl= "https://www.tiktok.com/@hoangthjnh2408";
                            }
                            <a href="@tiktokUrl" class="text-white fs-4 me-2" target="_blank">
                                <img src="~/img/icon_tiktok.png" alt="TikTok" style="width:24px;height:24px;" />
                            </a>
                            <!-- Facebook -->
                            <a href="https://www.facebook.com/hoangthjnh2408" class="text-white fs-4 me-2" target="_blank">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <!-- Instagram -->
                            <a href="https://www.instagram.com/doubleb.203/" class="text-white fs-4 me-2" target="_blank">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="border-secondary">
            <p class="text-center small mb-0">© 2025 Laptop Xách Tay Shop - All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Cho phép View con thêm script -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>