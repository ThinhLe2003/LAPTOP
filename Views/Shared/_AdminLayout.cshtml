<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Quản Trị</title>

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- CSS riêng cho Admin Layout -->
    <link rel="stylesheet" href="~/Views/Shared/_AdminLayout.cshtml.css" asp-append-version="true" />
</head>
<body>

<div class="admin-wrapper">
    <!-- Sidebar -->
    <div class="admin-sidebar">
        <div class="text-center mb-4 px-3">
            <h5 class="text-white fw-bold">QUẢN TRỊ</h5>
            <small class="text-light">Laptop Xách Tay Shop</small>
        </div>
        <hr class="border-secondary mx-3">

        <nav class="nav flex-column">
            <!-- Nhân viên -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "NhanVienAdmin" ? "active" : "")"
               asp-controller="NhanVienAdmin" asp-action="Index">
                <i class="bi bi-people"></i> Nhân viên
            </a>

            <!-- Sản phẩm -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SanPhamAdmin" ? "active" : "")"
               asp-controller="SanPhamsAdmin" asp-action="Index">
                <i class="bi bi-laptop"></i> Sản phẩm
            </a>

            <!-- Chi tiết sản phẩm -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ChiTietSanPhamsAdmin" ? "active" : "")"
               asp-controller="ChiTietSanPhamsAdmin" asp-action="Index">
                <i class="bi bi-cpu"></i> Chi tiết sản phẩm
            </a>

            <!-- Đơn hàng -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "HoaDonAdmin" ? "active" : "")"
               asp-controller="HoaDonAdmin" asp-action="Index">
                <i class="bi bi-receipt"></i> Đơn hàng
            </a>

            <!-- Khách hàng -->
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "KhachHangAdmin" ? "active" : "")"
               asp-controller="KhachHangAdmin" asp-action="Index">
                <i class="bi bi-person-lines-fill"></i> Khách hàng
            </a>
        </nav>

        <hr class="border-secondary mx-3">
        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
            <i class="bi bi-box-arrow-right"></i> Đăng xuất
        </a>
    </div>

    <!-- Nội dung chính -->
    <div class="admin-content">
        <div class="admin-header">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="admin-main-content">
            @RenderBody()
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>