<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Quản Trị</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/_AdminLayout.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-wrapper d-flex">

        <nav id="adminSidebar" class="admin-sidebar bg-dark text-white d-flex flex-column vh-100 transition-all" style="width: 250px; position: fixed; left: 0; top: 0; bottom: 0; z-index: 1000;">
            <div class="sidebar-header text-center py-4 border-bottom border-secondary position-relative">
                <h4 class="fw-bold m-0">LAPTOPSHOP</h4>
                <small class="text-muted">Quản Trị</small>

                <button class="btn btn-sm btn-outline-light position-absolute top-0 end-0 m-2 d-md-none" id="sidebarClose">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <ul class="sidebar-menu list-unstyled flex-grow-1 p-3">
                <li>
                    <a class="nav-link text-white p-2 rounded mb-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "SanPhamsAdmin" ? "bg-primary" : "")"
                       asp-controller="SanPhamsAdmin" asp-action="Index">
                        <i class="bi bi-laptop me-2"></i> Sản phẩm
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white p-2 rounded mb-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "ChiTietSanPhamAdmin" ? "bg-primary" : "")"
                       asp-controller="ChiTietSanPhamAdmin" asp-action="Index">
                        <i class="bi bi-cpu me-2"></i> Chi tiết SP
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white p-2 rounded mb-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "HoaDonAdmin" ? "bg-primary" : "")"
                       asp-controller="HoaDonAdmin" asp-action="Index">
                        <i class="bi bi-receipt me-2"></i> Đơn hàng
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white p-2 rounded mb-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "KhachHangAdmin" ? "bg-primary" : "")"
                       asp-controller="KhachHangAdmin" asp-action="Index">
                        <i class="bi bi-people me-2"></i> Khách hàng
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white p-2 rounded mb-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "NhanVienAdmin" ? "bg-primary" : "")"
                       asp-controller="NhanVienAdmin" asp-action="Index">
                        <i class="bi bi-person-badge me-2"></i> Nhân viên
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer p-3 border-top border-secondary">
                <a class="nav-link text-danger p-2" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                </a>
            </div>
        </nav>

        <div class="admin-content flex-grow-1 transition-all" style="margin-left: 250px; width: calc(100% - 250px);">

            <header class="bg-white shadow-sm p-3 mb-4 d-flex align-items-center justify-content-between">

                <button class="btn btn-outline-dark border-0" id="sidebarToggle">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <h5 class="m-0">@ViewData["Title"]</h5>

                <div class="user-info">
                    <span class="me-2">Admin</span>
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
            </header>

            <main class="container-fluid px-4">
                @RenderBody()
            </main>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById('adminSidebar');
            const content = document.querySelector('.admin-content');
            const toggleBtn = document.getElementById('sidebarToggle');
            const closeBtn = document.getElementById('sidebarClose');

            // Hàm bật/tắt menu
            function toggleSidebar() {
                sidebar.classList.toggle('collapsed');
                content.classList.toggle('expanded');
            }

            if (toggleBtn) {
                toggleBtn.addEventListener('click', toggleSidebar);
            }

            if (closeBtn) {
                closeBtn.addEventListener('click', function () {
                    sidebar.classList.add('collapsed'); // Trên mobile thì luôn đóng
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>