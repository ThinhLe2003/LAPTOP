@model IEnumerable<LAPTOP.Models.NhanVien>
    @{
    ViewData["Title"] = "Quản Lý Nhân Viên";
    Layout = "_AdminLayout";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill"></i> @ViewData["Title"] (@Model.Count() nhân viên)
        </h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow">
            <i class="bi bi-person-plus"></i> Thêm nhân viên mới
        </a>
    </div>

    <!-- Bảng nhân viên -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th width="10%">Mã NV</th>
                        <th width="22%">Họ tên</th>
                        <th>SĐT</th>
                        <th>Quê quán</th>
                        <th>Địa chỉ</th>
                        <th>Giới tính</th>
                        <th>Hệ số lương</th>
                        <th>Lương cơ bản</th>
                        <th width="12%">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox display-1 d-block"></i>
                            <p class="mt-3 fs-4">Chưa có nhân viên nào</p>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                    <tr class="text-center align-middle">
                        <td><strong class="text-primary">@item.MaNv</strong></td>
                        <td class="text-start fw-bold">@item.TenNv</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Sdt))
                                {
                            <a href="tel:@item.Sdt" class="text-decoration-none text-success">
                                <i class="bi bi-telephone-fill"></i> @item.Sdt
                            </a>
                                }
                                else
                                {
                            <span class="text-muted">—</span>
                                }
                        </td>
                        <td>@(item.QueQuan ?? "—")</td>
                        <td>@(item.DiaChi ?? "—")</td>
                        <td>
                            @if (item.GioiTinh == true)
                                {
                            <span class="badge bg-primary">Nam</span>
                                }
                                else if (item.GioiTinh == false)
                                {
                            <span class="badge bg-danger">Nữ</span>
                                }
                                else
                                {
                            <span class="badge bg-secondary">—</span>
                                }
                        </td>
                        <td class="text-end">
                            <span class="badge bg-warning text-dark">
                                @(item.HeSoLuong?.ToString("N1") ?? "—")
                            </span>
                        </td>
                        <td class="text-end fw-bold text-success">
                            @(item.Luong.HasValue ? $"{item.Luong.Value:N0} ₫" : "—")
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaNv" class="btn btn-warning btn-sm" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaNv" class="btn btn-info btn-sm text-white" title="Chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaNv" class="btn btn-danger btn-sm" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
