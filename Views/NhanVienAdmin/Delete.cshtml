@model LAPTOP.Models.NhanVien
@{
    ViewData["Title"] = "Xóa Nhân Viên";
    Layout ="_AdminLayout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <div class="nhanvien-container">
        <div class="nhanvien-header delete">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewData["Title"]
        </div>

        <div class="nhanvien-body">
            <div class="text-center mb-4">
                <h5 class="text-danger"><i class="bi bi-person-x-fill"></i> @Model.TenNv</h5>
                <p>Bạn có <strong>chắc chắn</strong> muốn xóa nhân viên này?</p>
            </div>

            <table class="table table-bordered">
                <tr><th width="35%">Mã NV</th><td><strong>@Model.MaNv</strong></td></tr>
                <tr><th>Họ tên</th><td>@Model.TenNv</td></tr>
                <tr><th>SĐT</th><td>@Model.Sdt</td></tr>
                <tr><th>Lương</th><td>@(Model.Luong.HasValue ? $"{Model.Luong:N0} đ" : "—")</td></tr>
            </table>

            <div class="text-center mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="MaNv" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Có, Xóa vĩnh viễn
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Hủy
                </a>
            </div>
        </div>
    </div>

</body>
</html>