@model LAPTOP.Models.NhanVien
@{
    ViewData["Title"] = "Chi Tiết Nhân Viên";
    Layout = "_AdminLayout";
}

<div class="nhanvien-container">
    <div class="nhanvien-header details">
        <i class="bi bi-person-lines-fill me-2"></i> @ViewData["Title"]
    </div>

    <div class="nhanvien-body">
        <table class="table table-bordered">
            <tr>
                <th width="35%">Mã nhân viên</th>
                <td><strong>@Model.MaNv</strong></td>
            </tr>
            <tr>
                <th>Họ tên</th>
                <td>@Model.TenNv</td>
            </tr>
            <tr>
                <th>SĐT</th>
                <td>@Model.Sdt</td>
            </tr>
            <tr>
                <th>Quê quán</th>
                <td>@Model.QueQuan</td>
            </tr>
            <tr>
                <th>Địa chỉ</th>
                <td>@Model.DiaChi</td>
            </tr>
            <tr>
                <th>Giới tính</th>
                <td>@(Model.GioiTinh == true ? "Nam" : Model.GioiTinh == false ? "Nữ" : "—")</td>
            </tr>
            <tr>
                <th>Hệ số lương</th>
                <td>@(Model.HeSoLuong?.ToString("N1") ?? "—")</td>
            </tr>
            <tr>
                <th>Lương cơ bản</th>
                <td>@(Model.Luong.HasValue ? $"{Model.Luong:N0} đ" : "—")</td>
            </tr>
        </table>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.MaNv" class="btn btn-warning text-dark">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
