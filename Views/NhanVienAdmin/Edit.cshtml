@model LAPTOP.Models.NhanVien

@{
    ViewData["Title"] = "Sửa Nhân Viên";
    Layout = "_AdminLayout";
}

<div class="nhanvien-container">
    <div class="nhanvien-header edit">
        <i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]
    </div>

    <div class="nhanvien-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="MaNv" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Họ tên</label>
                    <input asp-for="TenNv" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">SĐT</label>
                    <input asp-for="Sdt" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Quê quán</label>
                    <input asp-for="QueQuan" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Giới tính</label>
                    <select asp-for="GioiTinh" class="form-select">
                        <option value="">-- Chọn --</option>
                        <option value="true">Nam</option>
                        <option value="false">Nữ</option>
                    </select>
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Hệ số lương</label>
                    <input asp-for="HeSoLuong" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Lương cơ bản</label>
                    <input asp-for="Luong" class="form-control" />
                </div>
              <div class="col-md-4 mb-3">
                     <label class="form-label">Quyền (Role)</label>
                    <select asp-for="Role" class="form-select">
                        <option value="Admin" selected="@(Model.Role?.Trim() == "Admin")">Admin</option>
                        <option value="Staff" selected="@(Model.Role?.Trim() == "Staff")">Staff</option>
                    </select>

                 </div>

                <div class="col-md-4 mb-3">
                    <tr>
                        <th>Tên đăng nhập</th>
                        <td><input asp-for="UserName" class="form-control" /></td>
                    </tr>
                </div>
                <div class="col-md-4 mb-3">

                    <th>Mật khẩu (để trống nếu không đổi)</th>
                    <td>
                        <input name="NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới (tuỳ chọn)" />
                    </td>
                </div>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-warning text-dark">
                    <i class="bi bi-check-circle"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>
