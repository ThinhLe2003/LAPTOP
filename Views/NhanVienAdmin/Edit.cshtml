@model LAPTOP.Models.NhanVien
@{
    ViewData["Title"] = "Sửa Thông Tin Nhân Viên";
    Layout ="_AdminLayout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <div class="nhanvien-container">
        <div class="nhanvien-header edit">
            <i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]
        </div>

        <div class="nhanvien-body">
            <form asp-action="Edit" method="post" class="nhanvien-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MaNv" />

                <!-- Form giống Create, chỉ đổi nút -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Mã nhân viên</label>
                        <input value="@Model.MaNv" class="form-control" disabled />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TenNv" class="form-label">Họ tên</label>
                        <input asp-for="TenNv" class="form-control" />
                    </div>
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="Sdt" class="form-label">Số điện thoại</label>
                            <input asp-for="Sdt" class="form-control" placeholder="0901234567" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="QueQuan" class="form-label">Quê quán</label>
                            <input asp-for="QueQuan" class="form-control" placeholder="TP.HCM" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            <label asp-for="DiaChi" class="form-label">Địa chỉ hiện tại</label>
                            <input asp-for="DiaChi" class="form-control" placeholder="123 Đường ABC, Quận 1, TP.HCM" />
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                            <select asp-for="GioiTinh" class="form-select">
                                <option value="">-- Chọn --</option>
                                <option value="true">Nam</option>
                                <option value="false">Nữ</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="HeSoLuong" class="form-label">Hệ số lương</label>
                            <input asp-for="HeSoLuong" class="form-control" step="0.1" placeholder="2.5" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Luong" class="form-label">Lương cơ bản</label>
                            <input asp-for="Luong" class="form-control" placeholder="8,500,000" />
                        </div>
                    </div>
                    <!-- Các field còn lại giống Create... (copy từ Create) -->

                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-warning text-dark">
                            <i class="bi bi-check-circle"></i> Cập nhật
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="bi bi-arrow-left"></i> Hủy
                        </a>
                    </div>
</form>
        </div>
    </div>

    @section Scripts { <partial name="_ValidationScriptsPartial" /> }
</body>
</html>