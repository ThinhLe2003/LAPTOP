@model LAPTOP.Models.ChiTietSanPham
@{
    ViewData["Title"] = "Xóa Chi Tiết Sản Phẩm";
}

<div class="create-detail-box">
    <div class="create-detail-header" style="background: #dc3545;">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewData["Title"]
    </div>

    <div class="p-4">
        <div class="text-center mb-4">
            <h5 class="text-danger">
                <i class="bi bi-laptop"></i>
                @(Model.MaSpNavigation?.TenSp ?? "Không có tên sản phẩm")
            </h5>
            <p class="mb-0">Bạn có <strong>chắc chắn</strong> muốn xóa chi tiết cấu hình này không?</p>
        </div>

        <table class="table table-bordered">
            <tr><th width="35%">Mã sản phẩm</th><td><strong>@Model.MaSp</strong></td></tr>
            <tr><th>Tên sản phẩm</th><td>@(Model.MaSpNavigation?.TenSp ?? "—")</td></tr>
            <tr><th>CPU</th><td>@Model.Cpu</td></tr>
            <tr><th>RAM</th><td>@Model.Ram</td></tr>
            <tr><th>VGA</th><td>@Model.Vga</td></tr>
            <tr><th>Màn hình</th><td>@Model.ManHinh</td></tr>
            <tr><th>Hệ điều hành</th><td>@Model.HeDieuHanh</td></tr>
            <tr><th>Kích thước</th><td>@Model.KichThuoc</td></tr>
            <tr><th>Màu sắc</th><td>@Model.MauSac</td></tr>
        </table>

        <div class="text-center mt-4">
            <form asp-action="Delete" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MaSp" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Có, Xóa vĩnh viễn
                </button>
            </form>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Hủy, quay lại
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}