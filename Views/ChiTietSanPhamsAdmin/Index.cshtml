@model IEnumerable<dynamic>
    @{
    ViewData["Title"] = "Quản Lý Chi Tiết Sản Phẩm";
    Layout = "_AdminLayout";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-cpu-fill"></i> @ViewData["Title"] (@Model.Count() cấu hình)
        </h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow">
            <i class="bi bi-plus-circle"></i> Thêm chi tiết sản phẩm mới
        </a>
    </div>

    <!-- Bảng chi tiết sản phẩm -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th width="10%">Mã SP</th>
                        <th width="25%">Tên sản phẩm</th>
                        <th>CPU</th>
                        <th>RAM</th>
                        <th>VGA</th>
                        <th>Màn hình</th>
                        <th>HĐH</th>
                        <th>Kích thước</th>
                        <th>Màu sắc</th>
                        <th width="12%">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                {
                    <tr>
                        <td colspan="10" class="text-center py-5 text-muted">
                            <i class="bi bi-inbox display-1 d-block"></i>
                            <p class="mt-3 fs-4">Chưa có chi tiết sản phẩm nào</p>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                    <tr class="text-center align-middle">
                        <td><strong class="text-primary">@item.MaSp</strong></td>
                        <td class="text-start fw-bold">@item.TenSp</td>
                        <td><span class="badge bg-info text-dark">@item.Cpu</span></td>
                        <td><span class="badge bg-success">@item.Ram</span></td>
                        <td><span class="badge bg-warning text-dark">@item.Vga</span></td>
                        <td>@item.ManHinh</td>
                        <td>@item.HeDieuHanh</td>
                        <td>@item.KichThuoc</td>
                        <td>
                            <span class="badge" style="background: @(item.MauSac?.ToLower() == "đen" ? "#212529" : item.MauSac?.ToLower() == "bạc" ? "#ced4da" : "#6c757d"); color: white;">
                                @item.MauSac
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaSp" class="btn btn-warning btn-sm" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-info btn-sm text-white" title="Chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaSp" class="btn btn-danger btn-sm" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
