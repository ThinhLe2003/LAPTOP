@model LAPTOP.Models.ChiTietSanPham

@{
    ViewData["Title"] = "Sửa Chi Tiết Sản Phẩm";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaSp" />

    <div class="mb-3">
        <label asp-for="Cpu" class="form-label">CPU</label>
        <input asp-for="Cpu" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Ram" class="form-label">RAM</label>
        <input asp-for="Ram" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Vga" class="form-label">VGA</label>
        <input asp-for="Vga" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ManHinh" class="form-label">Màn hình</label>
        <input asp-for="ManHinh" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="HeDieuHanh" class="form-label">Hệ điều hành</label>
        <input asp-for="HeDieuHanh" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="KichThuoc" class="form-label">Kích thước</label>
        <input asp-for="KichThuoc" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MauSac" class="form-label">Màu sắc</label>
        <input asp-for="MauSac" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
