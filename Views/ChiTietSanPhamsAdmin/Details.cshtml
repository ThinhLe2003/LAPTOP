@model LAPTOP.Models.ChiTietSanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm " ;
}
@if (Model == null)
{
    <h2>Không tìm thấy sản phẩm nào!</h2>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    return;
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr><th>Mã SP</th><td>@Model.MaSp</td></tr>
    <tr><th>Tên SP</th><td>@Model.MaSpNavigation?.TenSp</td></tr>
    <tr><th>CPU</th><td>@Model.Cpu</td></tr>
    <tr><th>RAM</th><td>@Model.Ram</td></tr>
    <tr><th>VGA</th><td>@Model.Vga</td></tr>
    <tr><th>Màn hình</th><td>@Model.ManHinh</td></tr>
    <tr><th>Hệ điều hành</th><td>@Model.HeDieuHanh</td></tr>
    <tr><th>Kích thước</th><td>@Model.KichThuoc</td></tr>
    <tr><th>Màu sắc</th><td>@Model.MauSac</td></tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.MaSp" class="btn btn-primary">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
