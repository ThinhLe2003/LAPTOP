@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LAPTOP XACH TAY</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="bg-danger text-white py-2 shadow-sm">
        <div class="container d-flex flex-wrap justify-content-between align-items-center">

            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="~/img/Logo-full.png" alt="Logo" height="45" />
            </a>

            <form class="d-flex flex-grow-1 mx-3" asp-controller="SanPham" asp-action="TimKiem" style="max-width: 600px;">
                <input class="form-control" type="search" placeholder="Gõ tên hoặc model máy để tìm..." name="keyword" />
                <button class="btn btn-light" type="submit" style="margin-left: -1px;"><i class="bi bi-search"></i></button>
            </form>

            <div class="d-flex align-items-center">
                <div class="text-end me-3">
                    <div class="fw-bold">📞 Hotline: 0903 344 188</div>
                    <small>🕑 T.Gian làm việc: 08:30 - 19:30</small>
                </div>
                <a asp-controller="GioHang" asp-action="Index" class="btn btn-outline-light d-flex align-items-center">
                    <i class="bi bi-cart fs-4 me-2"></i>
                    <span class="badge bg-light text-danger rounded-pill">0</span>
                </a>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
        <div class="container">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav">

                    <li class="nav-item dropdown dropdown-megamenu">
                        <a class="nav-link dropdown-toggle text-white fw-bold" href="#" id="megamenuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-laptop me-1"></i> DANH MỤC SẢN PHẨM
                        </a>

                        <div class="dropdown-menu shadow-lg" aria-labelledby="megamenuDropdown">
                            <div class="row">

                                <div class="col-lg-3 col-md-6">
                                    <h6>THEO HÃNG SẢN XUẤT</h6>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Dell">Laptop Dell</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-hang="HP">Laptop HP</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Asus">Laptop Asus</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Lenovo">Laptop Lenovo</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Acer">Laptop Acer</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-hang="Macbook">Macbook</a>
                                </div>

                                <div class="col-lg-3 col-md-6">
                                    <h6>THEO NHU CẦU SỬ DỤNG</h6>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-nhuCau="Gaming">Laptop Gaming</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-nhuCau="VanPhong">Laptop Văn phòng</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-nhuCau="DoHoa">Laptop Đồ họa</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-nhuCau="MongNhe">Laptop Mỏng nhẹ</a>
                                </div>

                                <div class="col-lg-3 col-md-6">
                                    <h6>THEO KHOẢNG GIÁ</h6>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-gia="5-10">Từ 5 - 10 triệu</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-gia="10-20">Từ 10 - 20 triệu</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-gia="20-30">Từ 20 - 30 triệu</a>
                                    <a asp-controller="SanPham" asp-action="Index" asp-route-gia="tren-30">Trên 30 triệu</a>
                                </div>

                                <div class="col-lg-3 col-md-6 d-none d-lg-block">
                                    <h6>SẢN PHẨM MỚI NHẤT</h6>
                                    <a href="#">
                                        <img src="~/img/banner-hp-omni.jpg" alt="Quảng cáo" class="promo-image" />
                                    </a>
                                </div>

                            </div>
                        </div>
                    </li>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Home" asp-action="DichVu">
                                <i class="bi bi-gear me-1"></i> DỊCH VỤ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Home" asp-action="TinCongNghe">
                                <i class="bi bi-newspaper me-1"></i> TIN TỨC
                            </a>
                        </li>
                    </ul>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid bg-light" style="min-height: 70vh;">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white border-top text-center py-3">
        <small>&copy; 2025 - LAPTOP XACH TAY | <a asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>