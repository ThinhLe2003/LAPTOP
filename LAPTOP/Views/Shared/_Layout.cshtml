@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LAPTOP</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- HEADER TRÊN CÙNG -->
    <header class="bg-danger text-white py-2 shadow-sm">
        <div class="container d-flex flex-wrap justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/img/Logo-full.png" alt="Logo" height="45" class="me-2" />
                <h4 class="m-0 fw-bold">LAPTOP SHOP</h4>
            </div>
            <form class="d-flex flex-grow-1 mx-3" asp-controller="SanPham" asp-action="TimKiem">
                <input class="form-control me-2" type="search" placeholder="Nhập tên hoặc model laptop..." name="keyword" />
                <button class="btn btn-dark" type="submit"><i class="bi bi-search"></i></button>
            </form>
            <div class="text-end">
                <div class="fw-bold">📞 Hotline: 0896598433</div>
                <small>8 Hoàng Văn Thái, Phường Tân Mỹ, TpHCM</small>
            </div>
        </div>
    </header>

    <!-- THANH MENU ĐEN - LỌC THEO HÃNG -->
    <nav class="bg-dark py-2">
        <div class="container text-center">
            <a class="btn btn-outline-light btn-sm mx-1 my-1" asp-controller="SanPham" asp-action="Index">Tất cả</a>
            <a class="btn btn-outline-light btn-sm mx-1 my-1" asp-controller="SanPham" asp-action="LocTheoHang" asp-route-hang="Dell">Dell</a>
            <a class="btn btn-outline-light btn-sm mx-1 my-1" asp-controller="SanPham" asp-action="LocTheoHang" asp-route-hang="HP">HP</a>
            <a class="btn btn-outline-light btn-sm mx-1 my-1" asp-controller="SanPham" asp-action="LocTheoHang" asp-route-hang="Asus">Asus</a>
            <a class="btn btn-outline-light btn-sm mx-1 my-1" asp-controller="SanPham" asp-action="LocTheoHang" asp-route-hang="Acer">Acer</a>
            <a class="btn btn-outline-light btn-sm mx-1 my-1" asp-controller="SanPham" asp-action="LocTheoHang" asp-route-hang="Lenovo">Lenovo</a>
        </div>
    </nav>

    <!-- PHẦN NỘI DUNG CHÍNH -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- CHÂN TRANG -->
    <footer class="bg-light border-top text-center py-3">
        <small>&copy; 2025 - LAPTOP SHOP | <a asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></small>
    </footer>

    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
